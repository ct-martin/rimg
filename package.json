  "dependencies": {
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "node-fetch": "^2.6.1",
    "sharp": "^0.25.4"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.3",
    "@types/node-fetch": "^2.5.7",
    "@types/sharp": "^0.25.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.8.1",
