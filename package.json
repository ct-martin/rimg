{
  "name": "rimg",
  "version": "1.0.0",
  "description": "Quick image resizer",
  "main": "server/index.ts",
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "scripts": {
    "build": "npm run tsc",
    "dev": "nodemon server/index.ts",
